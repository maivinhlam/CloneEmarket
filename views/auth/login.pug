
extends ../layout/common

block content   
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error
        

    form(method="post")
        .form-group
            labe() Email
            input#name.form-control.mr-sm-2(type='text', placeholder='Email', aria-label='email', name="email", value= values ? values.email : "")                
        .form-group
            labe() Password
            input#name.form-control.mr-sm-2(type='password', placeholder='Password', aria-label='password', name="password")
        
        button.btn.btn-primary Login