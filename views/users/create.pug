
extends ../layout/common

block content   
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error
        

    form(action="/users/create", method="post", enctype="multipart/form-data")
        .form-group
            labe() Email
            input#name.form-control.mr-sm-2(type='text', placeholder='Email', aria-label='email', name="email", value= values ? values.email : "")                
        .form-group
            labe() Password
            input#name.form-control.mr-sm-2(type='password', placeholder='Password', aria-label='password', name="password")
        .form-group
            labe() Name
            input#name.form-control.mr-sm-2(type='text', placeholder='Name', aria-label='Name', name="name", 
                value= values ? values.name : "")
        .form-group
            labe() Phone
            input#phone.form-control.mr-sm-2(type='text', placeholder='Phone', aria-label='Phone', name="phone", value= values ? values.phone : "")
        .form-group
            labe(for='avatar') Avatar            
            input#avatar.form-control-file(name="avatar", type="file")
        button.btn.btn-primary Create