
extends ../layout/common

block content   
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error
        

    form(action="/users/create", method="post")
        .form-group
            labe() Name
            input#name.form-control.mr-sm-2(type='text', placeholder='Name', aria-label='Name', name="name", 
                value= values ? values.name : "")
        .form-group
            labe() Phone
            input#phone.form-control.mr-sm-2(type='text', placeholder='Phone', aria-label='Phone', name="phone",
            value= values ? values.phone : "")
        button.btn.btn-primary Create