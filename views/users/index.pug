extends ../layout/common

block content
  h1 
    span Users
    a.btn.btn-primary.ml-3.small(href="/users/create") New
  
  form.form-inline.my-2.my-lg-0(action='users/search', mothod="GET")
    input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search', name="q")
    button.btn.btn-outline-success.my-2.my-sm-0 Search
  
  table.table.mt-3
    thead
      tr
        th Avatar
        th Name
        th Phone
        th Email
        th
    tbody      
      each user in users
        tr
          td
            img(src="" + user.avatar, alt="", style="width: 50px")
          td= user.name
          td= user.phone 
          td= user.email                   
          td
            a(href="/users/" + user.id) View
